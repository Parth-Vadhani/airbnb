<%-layout("/layouts/boilerplate")%>

       <body>
              <div class="row">
                     <div class="col offset-2">

                            <h2 style="margin-top: 1rem;">Create New Listing !</h2>
                            <form action="/listings/newlisting" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                                   <div class="mb-3">
                                          <label class="form-label" for="title">Enter Title :</label>
                                          <input class="form-control" type="text" name="listing[title]" id="title"
                                                 required placeholder="New Beach Villa">
                                          <div class="valid-feedback">Looks Good !</div>
                                          <div class="invalid-feedback">Please Enter Title !</div>
                                   </div>
                                   <br>
                                   <div class="mb-3">
                                          <label class="form-label" for="description">Enter Description :</label>
                                          <textarea class="form-control" name="listing[description]" id="description" cols="20" rows="10" required></textarea>
                                          <div class="valid-feedback">Looks Good !</div>
                                          <div class="invalid-feedback">Please Enter Description !</div>
                                   </div>
                                   <br>
                                   <div class="mb-3">
                                          <label class="form-label" for="location">Enter Location :</label>
                                          <input class="form-control" type="text" name="listing[location]" id="location"
                                                 required placeholder="Florida">
                                          <div class="valid-feedback">Looks Good !</div>
                                          <div class="invalid-feedback">Please Enter Location !</div>
                                   </div>
                                   <br>
                                   <div class="mb-3">
                                          <label class="form-label" for="image">Upload Listing Image:</label>
                                          <input class="form-control" type="file" name="listing[image]" required>
                                          <div class="valid-feedback">Looks Good !</div>
                                          <div class="invalid-feedback">Please Upload Image!</div>
                                   </div>
                                   <br>
                                   <div class="row">
                                          <div class="mb-3 col-md-4">
                                                 <label class="form-label" for="country">Enter Country :</label>
                                                 <input class="form-control" type="text" name="listing[country]"
                                                        id="country" required placeholder="USA">
                                                 <div class="valid-feedback">Looks Good !</div>
                                                 <div class="invalid-feedback">Please Enter Country Name !</div>
                                          </div>
                                          <div class="mb-3 col-md-8">
                                                 <label class="form-label" for="price">Enter Price :</label>
                                                 <input class="form-control" type="text" name="listing[price]"
                                                        id="price" required placeholder="20000">
                                                 <div class="valid-feedback">Looks Good !</div>
                                                 <div class="invalid-feedback">Please Enter Price !</div>
                                          </div>
                                   </div>
                                   <br>

                                   <button type="submit" class="btn btn-dark">Create</button>
                            </form>
                     </div>
              </div>
       </body>