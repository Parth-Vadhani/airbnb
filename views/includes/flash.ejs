<% if (typeof success !== 'undefined' && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-4 mb-4" role="alert">
        <h3 style="display: inline-block; width: 95%;"><b><%= success %></b></h3>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (typeof error !== 'undefined' && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-4 mb-4" role="alert">
        <h3 style="display: inline-block; width: 95%;"><b><%= error %></b></h3>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

